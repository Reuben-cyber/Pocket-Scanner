<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Scan"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/white"
        android:onClick="OpenCamera"
        android:text="Scan"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="84dp" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="QR Scan"
        android:textSize="35dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Scan"
        app:layout_constraintEnd_toEndOf="parent"/><![CDATA[







    20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/QRscan"
        app:layout_constraintTop_toBottomOf="@+id/scan_img"
        app:srcCompat="@drawable/ic_qr_2" />

























    ]]>

    <Button
        android:id="@+id/Gallery"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"

        android:backgroundTint="@color/white"
        android:onClick="OpenGallery"
        android:text="Gallery"
        android:textSize="35dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/button5"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/white"
        android:text="My Files"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="84dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Convert"
        android:textSize="35dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_scan"
        tools:layout_editor_absoluteX="84dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/scan_img"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Scan"
        app:layout_constraintTop_toTopOf="@+id/Scan"
        app:srcCompat="@drawable/ic_scanner_3" />

    <ImageView
        android:id="@+id/qr_img"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_scan"
        app:layout_constraintTop_toBottomOf="@+id/scan_img"
        app:srcCompat="@drawable/ic_qr_3" />

    <ImageView
        android:id="@+id/convert_img"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/qr_img"
        app:srcCompat="@drawable/ic_convert_3" />

    <ImageView
        android:id="@+id/file_img"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/convert_img"
        app:srcCompat="@drawable/ic_file_3" />

    <ImageView
        android:id="@+id/gallery_img"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"


        app:layout_constraintEnd_toStartOf="@+id/Gallery"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/file_img"
        app:srcCompat="@drawable/ic_gallery_3" />

</androidx.constraintlayout.widget.ConstraintLayout>